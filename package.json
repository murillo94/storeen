{
  "name": "storeen-frontend",
  "private": true,
  "repository": "git@github.com:murillo94/storeen-frontend.git",
  "author": "Murillo de Miranda Pereira <murillobeta0@hotmail.com>",
  "devDependencies": {
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.3.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-dynamic-import": "^2.1.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.8",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "jest": "^24.9.0",
    "jest-next-dynamic": "^1.0.1",
    "lint-staged": "^9.4.1",
    "next-optimized-images": "^2.5.3",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "feather-icons-react": "^0.4.1",
    "next": "^9.2.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-text-mask": "^5.4.3",
    "set-value": "^3.0.1",
    "text-mask-addons": "^3.8.0"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.(png|ico)$": "<rootDir>/config/jest/fileTransformer.js"
    },
    "moduleNameMapper": {
      "^components(.*)$": "<rootDir>/src/components$1",
      "^containers(.*)$": "<rootDir>/src/containers$1",
      "^layouts(.*)$": "<rootDir>/src/layouts$1",
      "^hooks(.*)$": "<rootDir>/src/hooks$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^images(.*)$": "<rootDir>/src/images$1"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "next/babel"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-dynamic-import"
        ]
      }
    }
  }
}
