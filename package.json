{
  "name": "storeen-frontend",
  "private": true,
  "repository": "git@github.com:murillo94/storeen-frontend.git",
  "author": "Murillo de Miranda Pereira <murillobeta0@hotmail.com>",
  "devDependencies": {
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.5",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "next-optimized-images": "^2.5.3",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "next": "latest",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-feather": "^2.0.3",
    "react-text-mask": "^5.4.3",
    "text-mask-addons": "^3.8.0"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.(png|ico)$": "<rootDir>/config/jest/fileTransformer.js"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "next/babel"
    ]
  }
}
